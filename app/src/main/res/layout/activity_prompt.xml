<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.punya.cs193ahomework3.PromptActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fill in the words to complete the story."
        android:id="@+id/PromptTitleTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0 word(s) left"
        android:id="@+id/WordsLeftTV"
        android:layout_below="@+id/PromptTitleTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EnterWordET"
        android:layout_below="@+id/WordsLeftTV"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:layout_toStartOf="@+id/OKButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/OKButton"
        android:layout_alignBottom="@+id/EnterWordET"
        android:layout_alignParentEnd="true"
        android:onClick="OKButton_click" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please type a(n) word"
        android:id="@+id/WordTypeTV"
        android:layout_below="@+id/EnterWordET"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
